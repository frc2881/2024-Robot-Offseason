{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy Robot Code",
      "type": "shell",
      "windows": {
        "command": "py -3 -m robotpy deploy --nc-ds --skip-tests --robot 10.28.81.2"
      },
      "linux": {
        "command": "python3 -m robotpy sim --nc --skip-tests"
      },
      "problemMatcher": []
    },
    {
      "label": "Simulate Robot Code",
      "type": "shell",
      "windows": {
        "command": "py -3 -m robotpy sim"
      },
      "linux": {
        "command": "python3 -m robotpy sim"
      },
      "problemMatcher": []
    },
    {
      "label": "Install / Upgrade RobotPy",
      "type": "shell",
      "windows": {
        "command": "py -3 -m pip install --user --upgrade robotpy"
      },
      "linux": {
        "command": "python3 -m pip install --user --upgrade robotpy"
      },
      "problemMatcher": []
    },
    {
      "label": "Download RobotPy for roboRIO",
      "type": "shell",
      "windows": {
        "command": "py -3 -m robotpy sync"
      },
      "linux": {
        "command": "python3 -m robotpy sync"
      },
      "problemMatcher": []
    }
  ]
}