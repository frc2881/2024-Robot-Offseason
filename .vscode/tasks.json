      "label": "RobotPy: 1 - Install / Upgrade RobotPy",
      "type": "shell",
      "command": "python3 -m pip install --user --upgrade robotpy", 
      "windows": {
        "command": "py -3 -m pip install --upgrade robotpy"
      },
      "problemMatcher": []
    },
    {
      "label": "RobotPy: 2 - Download RobotPy for roboRIO",
      "type": "shell",
      "command": "python3 -m robotpy sync",
      "windows": {
        "command": "py -3 -m robotpy sync"
      },
      "problemMatcher": []
    },
    {
      "label": "RobotPy: 3 - Simulate Robot Code",
      "type": "shell",
      "command": "python3 -m robotpy sim",
      "windows": {
        "command": "py -3 -m robotpy sim"
      },
      "problemMatcher": []
    },
    {
      "label": "RobotPy: 4 - Deploy Robot Code",
      "type": "shell",
      "command": "python3 -m robotpy sim --nc --skip-tests",
      "windows": {
        "command": "py -3 -m robotpy deploy --nc-ds --skip-tests --robot 10.28.81.2"
      },
      "problemMatcher": []
    }
  ]
